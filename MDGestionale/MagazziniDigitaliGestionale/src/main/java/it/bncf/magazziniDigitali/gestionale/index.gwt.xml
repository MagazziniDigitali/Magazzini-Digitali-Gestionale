<?xml version="1.0" encoding="UTF-8"?>
<!--
  When updating your version of GWT, you should also update this DTD reference,
  so that your app can take advantage of the latest GWT module capabilities.
-->
<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit 2.5.0rc2//EN"
  "http://google-web-toolkit.googlecode.com/svn/tags/2.5.1/distro-source/core/src/gwt-module.dtd">
<module rename-to='index'>
  <!-- Inherit the core Web Toolkit stuff.                        -->
  <inherits name='com.google.gwt.user.User'/>

  <!-- Inherit the default GWT style sheet.  You can change       -->
  <!-- the theme of your GWT application by uncommenting          -->
  <!-- any one of the following lines.                            -->
  <inherits name='com.google.gwt.user.theme.clean.Clean'/>

  <!-- Gestione modulo multi lingua -->
  <inherits name="com.google.gwt.i18n.I18N"/>
  <inherits name="com.allen_sauer.gwt.dnd.gwt-dnd"/>
  
  <!-- inherits name="mx.teca2013.tecaUtils.Utility"/ -->
  <inherits name="com.smartgwt.SmartGwt"/>
  <!--inherits name="mx.teca2013.TecaGestionale.configurazione.configurazione"/>
  <inherits name="mx.teca2013.TecaGestionale.configurazione.tabelle.table"/ -->
  
  <!-- Italiano language, independent of country -->
  <extend-property name="locale" values="it"/>
  <!-- English language, independent of country -->
  <extend-property name="locale" values="en"/>
  
  <inherits name='com.google.gwt.user.theme.standard.Standard'/> 
  <inherits name='com.google.gwt.user.theme.chrome.Chrome'/> 
  <inherits name='com.google.gwt.user.theme.dark.Dark'/>     
  <inherits name="it.bncf.magazziniDigitali.Utility"/>
  <inherits name="it.bncf.magazziniDigitali.tools"/>
  <inherits name="it.bncf.magazziniDigitali.tools.graphics"/>
  
  <!-- Other module inherits                                      -->

  <!-- Specify the app entry point class.                         -->
  <entry-point class='it.bncf.magazziniDigitali.gestionale.client.index'/>
  
  <!-- Specify the paths for translatable code                    -->
  <source path='client'/>
  <source path='shared'/>
  <source path="cruscotto"/>
  <source path="search"/>
  <!--source path='login'/>
  <source path='nomenclatura'/>
  <source path='progetti'/>
  <source path='scansioni'/>
  <source path='opere'/-->
  
</module>
